<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_height="120.0dip"
    android:layout_width="fill_parent"
    android:padding="@dimen/update_padding_common"
    android:orientation="vertical"
    android:id="@+id/main_layout"
    android:gravity="center_vertical">
    <TextView
        android:layout_height="0.0dip"
        android:layout_width="wrap_content"
        android:layout_weight="1.0"
        android:text="Nutrition Title"
        android:id="@+id/textViewName"
        android:textColor="@color/update_text_description"
        android:textStyle="bold"
        android:textSize="@dimen/recipe_detail_frag_text_size_title"/>
    <LinearLayout
        android:layout_height="0.0dip"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:layout_weight="2.0">
        <LinearLayout
            android:layout_height="fill_parent"
            android:layout_width="0.0dip"
            android:orientation="vertical"
            android:layout_weight="1.0">
            <TextView
                android:layout_height="0.0dip"
                android:layout_width="fill_parent"
                android:layout_weight="1.0"
                android:text="Per Day"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="@dimen/recipe_detail_frag_text_size_title"/>
            <TextView
                android:layout_height="0.0dip"
                android:layout_width="fill_parent"
                android:layout_weight="1.0"
                android:text="Per Meal"
                android:textColor="@android:color/black"
                android:textSize="@dimen/recipe_detail_frag_text_size_title"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_height="fill_parent"
            android:layout_width="0.0dip"
            android:orientation="horizontal"
            android:layout_weight="2.0">
            <LinearLayout
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:orientation="vertical"
                android:layout_toLeftOf="@+id/imageViewGoal">
                <TextView
                    android:layout_height="0.0dip"
                    android:layout_width="fill_parent"
                    android:layout_weight="1.0"
                    android:text="V"
                    android:id="@+id/textViewPerDay"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="@dimen/recipe_detail_frag_text_size_title"/>
                <TextView
                    android:layout_height="0.0dip"
                    android:layout_width="fill_parent"
                    android:layout_weight="1.0"
                    android:text="G"
                    android:id="@+id/textViewPerMeal"
                    android:textColor="@color/black"
                    android:textSize="@dimen/recipe_detail_frag_text_size_title"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
